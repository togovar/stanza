{{#with error}}
  <div class='alert alert-danger'>{{message}}</div>
{{else}}
  {{#with result}}
    <table class='table frequency-detail'>
      <thead>
        <tr>
          <th rowspan='2'>Dataset</th>
          <th rowspan='2'>Population</th>
          <th colspan='4'>Allele count</th>
          <th colspan='{{#if ../hasHemizygote}}5{{else}}3{{/if}}'>Genotype count</th>
          <th class='filter_status' rowspan='2'>Filter status</th>
          <th rowspan='2'>Quality score</th>
        </tr>
        <tr>
          <th class='alt'>Alt</th>
          <th>Total</th>
          <th class='frequency'>Frequency</th>
          <th></th>
          <th class='num_genotype_alt_homo alt'>Alt / Alt</th>
          <th class='num_genotype_hetero'>Alt / Ref</th>
          <th class='num_genotype_ref_homo'>Ref / Ref</th>
          {{#if ../hasHemizygote}}
            <th class='num_genotype_hetero'>Hemi_Alt</th>
            <th class='num_genotype_ref_homo'>Hemi_Ref</th>
          {{/if}}
        </tr>
      </thead>

      <tbody>
        {{#if resultObject}}
          {{#each resultObject}}
            <tr data-dataset='{{dataset}}' class='{{class_name}}'>
              <td
                class='dataset {{class_name}}'
                id='{{source}}'
                data-dataset='{{source}}'
              >
                <div
                  class='dataset-icon'
                  data-dataset='{{source}}'
                ></div>{{dataset}}
              </td>
              <td
                class='population {{class_name}}'
                data-depth='{{depth}}'
                data-dataset='{{dataset}}'
                data-label='{{label}}'
                data-layer1='{{layer1}}'
                data-layer2='{{layer2}}'
              >
                {{label}}
              </td>
              <td class='num_alt_alleles'>{{ac}}<span class='slash'>
                  {{#if ac}}
                    /
                  {{/if}}</span></td>
              <td class='num_alleles'>{{an}}</td>
              <td class='frequency'>{{frequency}}</td>
              <td class='frequency-graph'>
                {{#if level}}
                  <div class='allele-frequency-graph'>
                    <span
                      class='dataset'
                      data-frequency='{{level}}'
                      data-dataset='{{dataset}}'
                    ></span>
                  </div>
                {{/if}}
              </td>
              <td class='num_genotype_alt_homo'>{{aac}}</td>
              <td class='num_genotype_hetero'>{{arc}}</td>
              <td class='num_genotype_ref_homo'>{{rrc}}</td>
              {{#if ../../hasHemizygote}}
                <td class='num_genotype_hemi_alt'>{{hemi_alt}}</td>
                <td class='num_genotype_hemi_ref'>{{hemi_ref}}</td>
              {{/if}}
              <td class='filter' data-filter='{{filter}}'>{{filter}}</td>
              <td class='quality'>{{quality}}</td>
            </tr>
          {{/each}}
        {{else}}
          <tr><td colspan="11" class="nodata-message">{{../params.no_data_message}}</td></tr>
        {{/if}}
      </tbody>
    </table>
  {{/with}}
{{/with}}