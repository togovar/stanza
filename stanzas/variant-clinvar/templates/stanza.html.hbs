{{#with error}}
  <div class='alert alert-danger'>{{message}}</div>
{{else}}
  <table id='target' class='table'>
    <thead>
      <tr>
        <th>Title</th>
        <th>VCV review status</th>
        <th>RCV review status</th>
        <th>Clinical significance</th>
        <th>Last evaluated</th>
        <th>Condition(s)</th>
      </tr>
    </thead>

    <tbody>
      {{#each result}}
        <tr>
          <td class='title'>
            <a href='{{clinvar}}'>{{title}}</a>
          </td>
          <td class='review-status'>
            <span class='star-rating'>
              <span data-stars='{{vcv_stars}}' class='star-rating-item'></span>
            </span>
            <br />
            <span class='status-description'>{{vcv_review_status}}</span>
          </td>
          <td class='review-status rowspan-ignore'>
            <span class='star-rating'>
              <span data-stars='{{rcv_stars}}' class='star-rating-item'></span>
            </span>
            <br />
            <span class='status-description'>{{rcv_review_status}}</span>
          </td>
          <td class='clinical-significance-col rowspan-ignore'>
            <span
              class='clinical-significance-full'
              data-sign='{{significance_class}}'
            >{{interpretation}}</span>
          </td>
          <td class='last-evaluated rowspan-ignore'>
            {{last_evaluated}}
          </td>
          <td class='condition rowspan-ignore'>
            <a href='{{condition.url}}'>{{condition.label}}</a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td class='text-center' colspan='5'>No data</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/with}}
